#ifndef INC_MOTOR_CONTROL_H_
#define INC_MOTOR_CONTROL_H_

#include "main.h"

// Definiciones de dirección de los motores
typedef enum {
   FORWARD,
   BACKWARD,
   LEFT,
   RIGHT
} MotorDirection;

// Prototipos de funciones
void Motor_Init(void);             // Inicializa los motores
void Motor_SetSpeed(int speed); // Ajusta la velocidad de los motores
void Motor_Move(MotorDirection direction);         // Mueve el robot en la dirección especificada
void Motor_Stop(void);                         // Detiene los motores
#endif /* INC_MOTOR_CONTROL_H_ */
